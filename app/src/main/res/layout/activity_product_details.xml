<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarProductDetails"
        android:background="#F8F5F5"
        app:title="Book Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/upperView"
        android:layout_weight="14.85"
        android:layout_above="@id/botoomView"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_layout"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imagePreview"
                        android:src="@drawable/preview"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"/>
                    <LinearLayout
                        android:padding="10dp"
                        android:weightSum="5"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="85dp">
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/textViewPrice"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:text="BDT250"
                                android:textSize="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:layout_marginTop="5dp"

                                android:textSize="15dp"
                                android:gravity="center"
                                android:textAlignment="center"


                                android:textColor="#F44336"

                                android:text=" Approx.BDT120    -50%"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="4"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/heart"
                                android:layout_width="30dp"
                                android:layout_height="30dp"/>
                            <TextView
                                android:text="307"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>


                    </LinearLayout>
                    <View
                        android:background="#EFEDED"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"/>
                    <TextView
                        android:id="@+id/textViewDescription"
                        android:textColor="#000"
                        android:textStyle="normal"
                        android:padding="10dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="20dp"
                        android:text="@string/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"


                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="15dp"
                            android:text="Orders:"
                            android:textColor="#000"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="10dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <View


                            android:layout_gravity="center"
                            android:background="#009688"
                            android:layout_width="150dp"
                            android:layout_height="7.5dp"/>
                        <TextView
                            android:id="@+id/textViewSell"
                            android:textSize="15dp"
                            android:textColor="#000"
                            android:text="33%"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <View

                        android:background="#F1F1F1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"/>
                    <LinearLayout
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView

                            android:elevation="5dp"
                            app:cardElevation="5dp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/textViewName"
                                    android:textColor="#000"
                                    android:padding="10dp"
                                    android:textSize="20dp"
                                    android:text="Name: Hashir Golpo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/textViewCategory"
                                    android:textColor="#000"
                                    android:padding="10dp"
                                    android:textSize="20dp"
                                    android:text="Cetagory: Novel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/textViewPublish"
                                    android:textColor="#000"
                                    android:padding="10dp"
                                    android:textSize="20dp"
                                    android:text="Publish: 24 May 2016"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:id="@+id/textViewAuthor"
                                    android:textColor="#000"
                                    android:padding="10dp"
                                    android:textSize="20dp"
                                    android:text="Author: Sersundu Bondhopadhai"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <LinearLayout

                                    android:orientation="horizontal"
                                    android:weightSum="6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:textColor="#000"
                                        android:layout_weight="4"
                                        android:padding="10dp"
                                        android:textSize="20dp"
                                        android:text="Specification:"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                    <Button
                                        android:id="@+id/buttonPreview"
                                        android:layout_weight="2"
                                        android:text="PreView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>



                </LinearLayout>
                <TextView
                    android:id="@+id/textViewComments"
                    android:layout_below="@id/linear_layout"
                    android:text="Reviews And Comments"
                    android:layout_margin="10dp"
                    android:textSize="22.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewComments"
                   android:layout_below="@+id/textViewComments"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textViewRelatedBook"
                    android:layout_below="@id/cardViewComments"
                    android:text="Related Book"
                    android:layout_margin="10dp"
                    android:textSize="22.5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_below="@+id/textViewRelatedBook"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewRelatedBook"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>


            </RelativeLayout>


        </ScrollView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/botoomView"
        android:layout_weight="0.15"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/upperView"
        android:layout_width="match_parent"
        android:layout_height="62.5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/bottom_design"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linear_layout_store"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/bottom_design"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/shop"

                    android:layout_width="30dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:text="Store"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_layout_contact"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical"

                android:background="@drawable/bottom_design"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/contact"

                    android:layout_width="30dp"
                    android:layout_height="35dp"/>
                <TextView
                    android:text="Contact"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_layout_cart"

                android:layout_weight="2"
                android:background="#FAF7DD"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#F44336"
                    android:textSize="17.5dp"
                    android:text="Add To Cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_layout_buy"
                android:layout_weight="2"
                android:background="#F44336"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="17.5dp"
                    android:textColor="#fff"
                    android:text="Buy Now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>


    </FrameLayout>



</LinearLayout>