<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".sampledata.BuyActivityNew">
    <androidx.appcompat.widget.Toolbar
        app:menu="@menu/shiping_address_autometicbutton"
        app:title="Edit Shiping Adress"
        android:id="@+id/toolbarShipingAdress"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />

   <LinearLayout
       android:orientation="vertical"
       android:weightSum="20"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_weight="14"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ScrollView
               android:background="#ffff"

               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:background="#fff"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <LinearLayout
                       android:padding="15dp"
                       android:layout_marginBottom="15dp"
                       android:orientation="vertical"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <EditText
                           android:id="@+id/textSpName"
                           android:hint="Full Name"
                           android:textSize="20dp"
                           android:textColor="#000"
                           android:drawableLeft="@drawable/ic_baseline_account_box_24"
                           android:layout_marginTop="25dp"
                           android:drawablePadding="10dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:id="@+id/textSpPhone"
                           android:hint="Mobile Number"
                           android:drawablePadding="10dp"
                           android:textSize="20dp"
                           android:drawableLeft="@drawable/ic_baseline_call_24"
                           android:layout_marginTop="25dp"
                           android:textColor="#000"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:id="@+id/textSpEmail"
                           android:hint="Email (Optional)"
                           android:drawablePadding="10dp"
                           android:textSize="20dp"
                           android:drawableLeft="@drawable/ic_baseline_email_24"
                           android:layout_marginTop="25dp"
                           android:textColor="#000"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:id="@+id/textSpRegion"
                           android:hint="Region"
                           android:drawableLeft="@drawable/ic_baseline_place_24"
                           android:textSize="20dp"
                           android:drawablePadding="10dp"
                           android:layout_marginTop="25dp"
                           android:textColor="#000"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:id="@+id/textSpCity"
                           android:hint="City"
                           android:drawableLeft="@drawable/ic_baseline_place_24"
                           android:textSize="20dp"
                           android:drawablePadding="10dp"
                           android:layout_marginTop="25dp"
                           android:textColor="#000"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>

                       <EditText
                           android:id="@+id/textSpArea"
                           android:hint="Area"
                           android:drawableLeft="@drawable/ic_baseline_place_24"
                           android:textSize="20dp"
                           android:drawablePadding="10dp"
                           android:layout_marginTop="25dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <EditText
                           android:id="@+id/textSpAdress"
                           android:hint="Adress"
                           android:textSize="20dp"
                           android:drawablePadding="10dp"
                           android:textColor="#000"
                           android:drawableLeft="@drawable/ic_baseline_place_24"
                           android:layout_marginTop="25dp"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                   </LinearLayout>
                   <View
                       android:background="#86F4F4F4"
                       android:layout_width="match_parent"
                       android:layout_height="15dp"/>
                   <LinearLayout
                       android:orientation="vertical"
                       android:padding="15dp"

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:text="Select a label for effective delivary"
                           android:textSize="20dp"
                           android:textColor="#000"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"/>
                       <RadioGroup
                           android:id="@+id/radioShipingGroup"
                           android:padding="15dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <RadioButton
                               android:id="@+id/radioOffice"
                               android:text="OFFICE"
                               android:padding="10dp"
                               android:textSize="20dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>
                           <RadioButton
                               android:id="@+id/radioHome"
                               android:text="HOME"
                               android:padding="10dp"
                               android:textSize="20dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"/>

                       </RadioGroup>

                   </LinearLayout>
                   <View
                       android:background="#86F4F4F4"
                       android:layout_width="match_parent"
                       android:layout_height="15dp"/>
                   <LinearLayout
                       android:orientation="horizontal"
                       android:weightSum="5"
                       android:padding="5dp"

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <TextView
                           android:padding="10dp"
                           android:layout_weight="3"
                           android:textColor="#000"
                           android:textSize="20dp"
                           android:text="Make a defult Shipping address"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"/>
                       <Switch
                           android:id="@+id/switchShiping"
                           android:textOff="off"
                         android:textOn="on"
                           android:layout_weight="1.5"
                           android:layout_width="65dp"
                           android:background="@drawable/round_button"
                           android:layout_height="wrap_content"
                          />

                   </LinearLayout>
                   <View
                       android:background="#86F4F4F4"
                       android:layout_width="match_parent"
                       android:layout_height="15dp"/>
                   <TextView
                       android:id="@+id/textDeletShipingAdress"
                       android:textSize="20dp"
                       android:padding="15dp"
                       android:layout_marginBottom="15dp"
                       android:text="Delete Address"
                       android:textColor="#DA0E09"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
           </ScrollView>
       </LinearLayout>


       <LinearLayout

           android:layout_weight="4"
           android:layout_width="match_parent"
           android:layout_height="75dp">
           <Button
               android:id="@+id/buttonSave"
               android:textSize="20dp"
               android:textAlignment="center"
               android:layout_gravity="center"
               android:text="Save"
               android:background="#E53935"
               android:textColor="#fff"
               android:textAllCaps="false"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>
       </LinearLayout>


   </LinearLayout>

</LinearLayout>